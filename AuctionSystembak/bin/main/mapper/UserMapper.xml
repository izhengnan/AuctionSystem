<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="qkl.zn.AuctionSystem.mapper.UserMapper">
    <insert id="userRegister">
        insert t_user(username,password,role,create_time,update_time) values(#{username},#{password},#{role},#{createTime},#{updateTime})
    </insert>
    <select id="userLogin" resultType="qkl.zn.AuctionSystem.pojo.entity.User">
        select * from t_user where username = #{username}
    </select>
</mapper>